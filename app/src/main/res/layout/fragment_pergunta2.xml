<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pergunta2Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewPergunta2"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:contentDescription="@string/fotopergunta2"
            android:src="@drawable/pergunta2" />

        <TextView
            android:id="@+id/textViewPergunta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pergunta2"
            android:textColor="@color/purple_500"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupPergunta2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonPergunta2A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pergunta2a" />

            <RadioButton
                android:id="@+id/radioButtonPergunta2B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pergunta2b" />

            <RadioButton
                android:id="@+id/radioButtonPergunta2C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pergunta2c" />

            <RadioButton
                android:id="@+id/radioButtonPergunta2D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pergunta2d" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonPergunta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enviarperguntas" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>